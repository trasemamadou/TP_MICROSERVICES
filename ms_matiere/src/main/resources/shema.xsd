        </xs:complexType>
    </xs:element>

    <xs:element name="UpdateMatiereResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="xs:long" />
                <xs:element name="nom" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="DeleteMatiereRequest">
