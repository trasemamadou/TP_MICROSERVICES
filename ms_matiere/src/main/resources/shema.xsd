        </xs:complexType>
    </xs:element>
    <xs:element name="GetMatiereListRequest">
        <xs:complexType>
            <xs:sequence/>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetMatiereListResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="matieres" minOccurs="0" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="id" type="xs:long" />
                            <xs:element name="nom" type="xs:string" />
                        </xs:sequence>
                    </xs:complexType>
